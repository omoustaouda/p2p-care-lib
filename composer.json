{
    "name": "caring-circles/p2p-care-lib",
    "description": "Library containing reusable shared components.",
    "license": "AGPLv3 with Commons Clause License Condition v1.0",
    "authors": [
        {
            "name": "Othmane Moustaouda",
            "email": "web@othmanemoustaouda.io"
        }
    ],
    "require": {
        "php": "8.*",
        "ext-json": "*",
        "ext-pdo": "*",
        "monolog/monolog": "^2.2",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "CaringCircles\\P2pCare\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CaringCircles\\P2pCare\\Tests": "tests/"
        },
        "files": [
            "tests/bootstrap.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
